<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>



<h2><p class="bg-info">プロフィール</p></h2>
<h2><%= @user.profile %></h2>

<h2><p class="bg-info">出身地</p></h2>
<h2><%= @user.birthplace %></h2>

<h2><p class="bg-info">メールアドレス</p></h2>
<h2><%= @user.email %></h2>


<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <h3>Microposts (<%= @user.microposts.count %>)(<%= link_to "followings", followings_user_path(@user) %>)(<%= link_to "followers", followers_user_path(@user) %>)</h3>
    <% if @user.microposts.any? %>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>
